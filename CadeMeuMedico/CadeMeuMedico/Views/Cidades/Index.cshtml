@model IEnumerable<CadeMeuMedico.Models.Cidades>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="btn btn-default">
    @Html.ActionLink("Adicionar Cidade", "Adicionar")
</p>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDCidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDCidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IDCidade }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.IDCidade }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IDCidade })
        </td>
    </tr>
}

</table>
