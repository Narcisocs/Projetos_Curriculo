<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:src="@mipmap/song"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="nomeMusica"
            android:id="@+id/nomeMusica"
            android:textSize="15sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignStart="@+id/nomeBanda" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="nomeBanda"
            android:id="@+id/nomeBanda"
            android:layout_alignBottom="@id/imageView"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/nomeMusica"
            android:textSize="10sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:text="nomeAlbum"
            android:id="@+id/nomeAlbum"
            android:layout_toRightOf="@id/imageView"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/nomeBanda"
            android:textSize="10sp"
            android:gravity="bottom"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>